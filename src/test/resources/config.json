{
    "path": {
        "server": "src/test/js",
        "resources": "src/test/resources",
        "client": "src/test/web"
    },
    "log4js": {
        "cwd": "var/logs",
        "appenders": [
            {
                "category": "test",
                "type": "dateFile",
                "filename": "test.log",
                "pattern": "-yyyy-MM-dd",
                "alwaysIncludePattern": false
            },
            {
                "category": "test-db",
                "type": "dateFile",
                "filename": "test-db.log",
                "pattern": "-yyyy-MM-dd",
                "alwaysIncludePattern": false
            }
        ]
    },
    "session": {
        "store": "redis:1",
        "key": "fusion",
        "maxAge": 86400000,
        "overwrite": true,
        "httpOnly": true,
        "signed": true
    },
    "databases": {
        "common": {
            "dialect": "postgres",
            "host": "127.0.0.1",
            "port": 5432,
            "name": "common",
            "username": "soglad",
            "password": "soglad",
            "logging": "test-db"
        },
        "redis": {
            "host": "127.0.0.1",
            "port": 6379,
            "password": "redis"
        }
    }
}