{
    "path": {
        "server": "src/main/js",
        "resources": "src/main/resources",
        "client": "src/main/web"
    },
    "log4js": {
        "cwd": "var/logs",
        "appenders": [
            {
                "category": "fusion",
                "type": "dateFile",
                "filename": "fusion.log",
                "pattern": "-yyyy-MM-dd",
                "alwaysIncludePattern": false
            },
            {
                "category": "fusion-db",
                "type": "dateFile",
                "filename": "fusion-db.log",
                "pattern": "-yyyy-MM-dd",
                "alwaysIncludePattern": false
            }
        ]
    },
    "session": {
        "key": "fusion",
        "maxAge": 86400000,
        "overwrite": true,
        "httpOnly": true,
        "signed": true,
        "store": "redis:1"
    },
    "databases": {
        "common": {
            "dialect": "postgres",
            "host": "127.0.0.1",
            "port": 5432,
            "name": "common",
            "username": "soglad",
            "password": "soglad"
        },
        "fusion": {
            "dialect": "postgres",
            "host": "127.0.0.1",
            "port": 5432,
            "name": "fusion",
            "username": "soglad",
            "password": "soglad"
        },
        "redis": {
            "host": "172.17.0.1",
            "port": 6379,
            "password": "redis"
        }
    }
}